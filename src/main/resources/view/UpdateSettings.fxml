                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <TextField fx:id="preferenceAPIKey" layoutX="684.0" layoutY="139.0" promptText="New API Key" styleClass="infoTextFields">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></TextField>
            <TextField fx:id="preferenceAPISecret" layoutX="684.0" layoutY="234.0" promptText="New API Secret" styleClass="infoTextFields">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></TextField>
            <CheckBox fx:id="darkModePreference" layoutX="684.0" layoutY="329.0" mnemonicParsing="false" selected="true" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></CheckBox>
            <ChoiceBox fx:id="localTimeZone" layoutX="684.0" layoutY="422.0" prefWidth="150.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ChoiceBox>
            <Label layoutX="448.0" layoutY="510.0" styleClass="infoLabels" text="Refresh Interval">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="refreshInterval" layoutX="684.0" layoutY="515.0" prefWidth="150.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ChoiceBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
